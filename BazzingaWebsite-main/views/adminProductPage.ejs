<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin_index_style.css">
   
</head>

<%- include('_layouts/admin_header'); -%>
<h2 class="titleProduct">Products </h2>
        <button class="add-product"><a href="/admin/products/add-product">+ Product</a></button>

        <table class="table table-striped table-image">
            <thead>
                <tr class="">
                    <th scope="col"></th>
                    <th scope="col">Product</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(function (item) { %>
                     <tr>
                        <% if(item.available==1){ %>
                            <td><a id='av' style="pointer-events: none; cursor: default;" href="#">AVAILABLE!</a></td>
                        <% }else{  %>
                            <td><a id = 'av' style="pointer-events: none; cursor: default;" href="#">Not AVAILABLE!</a></td>
                        <% }  %>
                         <td scope='row'><img src="/images/<%=item.product_image%>"  class='img-thumbnail' alt="" style="height: 100px; width: 100px; object-fit: contain;"></td>
                         <td style="font-weight: 700;"  class="title-img"><%= item.product_title%></td>
                         <td><%=item.product_price%>$</td>
                         <td><%=item.category_name%></td>
                         <td><button><a href="/admin/products/edit-product/<%=item.product_id%>">Edit</a></button></td>
                         <td><button><a href="/admin/products/delete-product/<%=item.product_id%>">Delete</a></button></td>
                     </tr>
                <% }) %>         
             </tbody>
         </table>

         <%- include('_layouts/footer'); -%>

